extends layout

block content
  .page-header
    h3 Job Details Form

  form.form-horizontal(role='form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='job_title') Job Title
      .col-sm-8
        input.form-control(type='text', name='job_title', id='job_title')
    .form-group
      label(class='col-sm-2 control-label', for='description') Description
      .col-sm-8
        textarea.form-control(name='description', id='description')
    .form-group
      label(class='col-sm-2 control-label', for='job_id') Job ID
      .col-sm-8
        input.form-control(type='text', name='job_id', id='job_id')
    .form-group
      label(class='col-sm-2 control-label', for=skill_set) Skill Set
      .col-sm-8
        textarea.form-control(name='skill_set', id='skill_set')
    .form-group
      label(class='col-sm-2 control-label', for='location') Location
      .col-sm-8
        input.form-control(type='text', name='location', id='location')
    .form-group
      label(class='col-sm-2 control-label', for='experience_level') Experience Level
      .col-sm-8
        input.form-control(type='text', name='experience_level', id='experience_level')
    .form-group.fo
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          | Post Job