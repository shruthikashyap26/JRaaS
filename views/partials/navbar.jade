.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        span.ion-university
        | JRaaS
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        if !user
          li(class=title=='Home'?'active':undefined)
            a(href='/') Home
          li(class=title=='Find a Job'?'active':undefined)
            a(href='/explore', data-toggle='search')
              i.fa.fa-search
                |  Find a Job
        else if user.whoareyou=='candidate'
          li(class=title=='Home'?'active':undefined)
            a(href='/') Home
          li(class=title=='Find a Job'?'active':undefined)
            a(href='/explore', data-toggle='search')
              i.fa.fa-search
                |  Find a Job
          li(class=title=='Messages'?'active':undefined)
            a(href='/account') Profile
        else
          li(class=title=='Home'?'active':undefined)
            a(href='/exploreByCompany') Home
          li(class=title=='Post a Job'?'active':undefined)
            a(href='/job') Post a Job
          li(class=title=='Company Profile'?'active':undefined)
            a(href='account/profile') Profile
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Login
          li(class=title=='Create Account'?'active':undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src='#{user.profile.picture}')
              else
                img(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li
                a(href='/account')
                  span.ion-person
                  | My Account
              li.divider
              li
                a(href='/logout')
                  span.ion-log-out
                  |  Logout