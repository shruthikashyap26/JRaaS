extends ../layout

block content
  .page-header
    h3 Profile Details
    .col-sm-2
    h4 Please provide the below details to complete your profile.
    form#profile.form-horizontal(method='POST')
      input(type='hidden', name='_csrf' value=_csrf)
      .form-group
        label.col-sm-2.control-label(for='title') Title
        .col-sm-4
          input#title.form-control(type='text', name='title', rows='3', placeholder='Developer, Intern, Sales Executive', value='#{user.profilesummary.title}')
      .form-group
        label.col-sm-2.control-label(for='specialization') Specialization
        .col-sm-4
          select#specialization(name='specialization', value='#{user.profilesummary.specialization}')
            option(value='Engineering Backend' selected) Engineering Backend
            option(value='Engineering Frontend') Engineering Frontend
            option(value='Engineering Devops') Engineering Devops
            option(value='Engineering Mobile') Engineering Mobile
            option(value='Engineering QA') Engineering QA
            option(value='Engineering Full-stack') Engineering Full-stack
            option(value='Product Management') Product Management
            option(value='Project Management') Project Management
            option(value='Business Development') Business Development
            option(value='Marketing') Marketing
            option(value='Sales') Sales
      .form-group
        label.col-sm-2.control-label(for='skills') Skills
        .col-sm-4
          input#skills.form-control(type='text', name='skills', rows='3', placeholder='enter relevant skills based on specialization', value='#{user.profilesummary.skills}')
      .form-group
        label.col-sm-2.control-label(for='location') Location
        .col-sm-4
          input#location.form-control(type='text', name='location', rows='3', placeholder='enter your current location for optimal matching', value='#{user.profilesummary.location}')
      .form-group
        label.col-sm-2.control-label(for='search') Looking for 
        .col-sm-4
          label.radio
          input(type='radio', name='search', value='active', data-toggle='radio')
          span Active 
          label.radio
          input(type='radio', name='search', value='passive', data-toggle='radio')
          span Passive
      .form-group
        .col-sm-offset-2.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          span.ion-edit
          | Next